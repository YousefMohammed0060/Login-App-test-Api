<h2>Login page</h2>
<div class="row">
    <form class="form-check-inline float-start" asp-controller="Home" asp-action="Login" style="padding-right: 25px; width:400px">
        <input style="margin:5px 5px 5px 5px" name="userName" type="text" class="form-control my-2 my-lg-0" placeholder="Username">
        <input style="margin:5px 5px 5px 5px" name="password" type="password" class="form-control my-2 my-lg-0" placeholder="Password">
        <button style="margin:5px 5px 5px 5px" class="btn btn-outline-success my-2 my-lg-0 float-start" type="submit">Login</button>
        <button style="margin:5px 5px 5px 5px" class="btn btn-success my-2 my-lg-0 float-start" asp-action="Register" type="submit">Register</button>
    </form>
    
</div>
